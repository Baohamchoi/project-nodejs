<div class="mt-4">
    <h3>Chỉnh sửa khóa học</h3>

    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group mb-3">
            <label for="name" class="form-label">Tên khóa học</label>
            <input
                type="text"
                value="{{course.name}}"
                class="form-control"
                name="name"
                id="name"
            />
        </div>
        <div class="form-group mb-3">
            <label for="description" class="form-label">Mô tả</label>
            <input
                type="text"
                class="form-control"
                value="{{course.description}}"
                name="description"
                id="description"
            />
        </div>
        <div class="form-group mb-3">
            <label for="level" class="form-label">Trình độ</label>
            <input
                type="text"
                class="form-control"
                value="{{course.level}}"
                name="level"
                id="level"
            />
        </div>
        <div class="form-group mb-3">
            <label for="videoId" class="form-label">Video ID</label>
            <input
                type="text"
                class="form-control"
                value="{{course.videoId}}"
                name="videoId"
                id="videoId"
            />
        </div>
        <div class="form-group mb-3">
            <button type="submit" class="btn btn-success">Cập nhật thông tin</button>
            <button class="btn btn-danger">Xóa thông tin</button>
        </div>
    </form>
    
</div>