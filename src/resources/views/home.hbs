<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-course-item">
                <a href="/courses/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" style="height: 190px;" alt="">
                </a> 
                
                <div class="card-body">
                    <a href="/courses/{{this.slug}}" style="text-decoration: none;">
                        <h5 class="card-name text-dark">{{this.name}}</h5>
                    </a> 
                    
                    <p class="card-description">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>